{
  "name": "@haensl/react-hooks",
  "version": "1.13.0",
  "description": "Assorted React hooks.",
  "main": "dist/hooks.cjs.js",
  "module": "dist/hooks.esm.js",
  "unpkg": "dist/hooks.umd.js",
  "scripts": {
    "build": "npm run clean && NODE_ENV=production rollup -c",
    "clean": "rimraf ./dist",
    "coverage:ci": "CI=true npm test -- --ci --coverage",
    "lint": "NODE_ENV=production eslint --ext js,jsx src/",
    "lint:ci": "NODE_ENV=production eslint --format junit -o test-results/eslint/results.xml --ext js,jsx src/",
    "prepare": "if [ ${NODE_ENV} != 'production' ]; then husky install; fi",
    "tdd": "jest --runInBand --watch",
    "test": "jest --runInBand",
    "test:ci": "jest --runInBand --no-cache --ci --reporters='default' --reporters='jest-junit'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haensl/hooks.git"
  },
  "keywords": [
    "react",
    "hooks",
    "react hooks",
    "useBoundingClientRect",
    "boundingClientRect",
    "useClassNames",
    "class",
    "className",
    "classNames",
    "css",
    "useDebounce",
    "debounce",
    "useAnimationFrame",
    "requestAnimationFrame",
    "animationFrame",
    "animation",
    "useIsMounted",
    "isMounted",
    "useIsomorphicLayoutEffect",
    "isomorphicLayoutEffect",
    "isomorphic",
    "layoutEffect",
    "useIsScrolling",
    "isScrolling",
    "useOnScroll",
    "onScroll",
    "window",
    "scroll",
    "usePrevious",
    "previous",
    "value",
    "useWindowSize",
    "windowSize",
    "size"
  ],
  "author": {
    "name": "HP Dietz",
    "url": "https://hpdietz.com",
    "twitter": "@h_p_d",
    "email": "h.p.dietz@gmail.com"
  },
  "funding": "https://github.com/sponsors/haensl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haensl/hooks/issues"
  },
  "homepage": "https://github.com/haensl/hooks#readme",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!<rootDir>/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__snapshots__/",
      "<rootDir>/test.setup.js",
      "<rootDir>/package.json",
      "<rootDir>/package-lock.json"
    ],
    "coverageReporters": [
      "text"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "/package-tests/"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "modulePaths": []
  },
  "jest-junit": {
    "outputDirectory": "test-results/jest",
    "outputName": "results.xml",
    "suitName": "react hooks unit tests"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "@haensl"
    ]
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.14.5",
    "@haensl/eslint-config": "^1.3.0",
    "@haensl/rollup-plugin-local-resolve": "^1.1.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^14.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.3.1",
    "babel-preset-react-app": "^10.0.0",
    "eslint": "^8.5.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^16.0.0",
    "react": "^18.2.0",
    "react-app-polyfill": "^3.0.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.9.1",
    "rollup-plugin-peer-deps-external": "^2.2.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@haensl/services": "^1.3.0"
  }
}
